<?import javafx.scene.layout.BorderPane?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>
<BorderPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="game.controller.GameOverviewController">
    <top>
        <Label prefHeight="60" prefWidth="800" style="-fx-border-style: solid; -fx-border-width: 0 0 1 0" alignment="BASELINE_CENTER">
            Turtle Game (score etc. ?)
        </Label>
    </top>

    <bottom>
        <Label prefHeight="60" prefWidth="800" style="-fx-border-style: solid; -fx-border-width: 1 0 0 0" alignment="BASELINE_CENTER">
            Command Sequence
        </Label>
    </bottom>

    <left>
        <Label prefHeight="480" prefWidth="120" style="-fx-border-style: solid; -fx-border-width: 0 1 0 0" alignment="BASELINE_CENTER">
            Commands
        </Label>
    </left>

    <right>
        <Label prefHeight="480" prefWidth="180" style="-fx-border-style: solid; -fx-border-width: 0 0 0 1" alignment="BASELINE_CENTER">
            History
        </Label>
    </right>

    <center>
        <Label>
            Board
        </Label>
        <VBox alignment="TOP_CENTER" prefHeight="200.0" prefWidth="150.0" BorderPane.alignment="CENTER">
            <children>
                <Button fx:id="stepForwardButton" alignment="TOP_CENTER" maxWidth="1.7976931348623157E308"
                        mnemonicParsing="false" onAction="#handleAddStepForwardAction" text="Step Forward">
                    <VBox.margin>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                    </VBox.margin></Button>
            </children>
            <BorderPane.margin>
                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
            </BorderPane.margin>
        </VBox>
    </center>
</BorderPane>